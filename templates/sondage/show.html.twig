{% extends 'base.html.twig' %}

{% block title %}Sondage{% endblock %}

{% block body %}
    <h1>Sondage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sondage.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sondage.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sondage.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ sondage.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ sondage.categorie }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ sondage.createdDate ? sondage.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sondage_index') }}">back to list</a>

    <a href="{{ path('sondage_edit', {'id': sondage.id}) }}">edit</a>

    {{ include('sondage/_delete_form.html.twig') }}
{% endblock %}
