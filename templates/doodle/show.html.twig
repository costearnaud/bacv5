{% extends 'base.html.twig' %}

{% block title %}Doodle{% endblock %}

{% block body %}
    <h1>Doodle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ doodle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ doodle.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ doodle.description }}</td>
            </tr>
            <tr>
                <th>MaxPersonnes</th>
                <td>{{ doodle.maxPersonnes }}</td>
            </tr>
            <tr>
                <th>BeginDate</th>
                <td>{{ doodle.beginDate ? doodle.beginDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ doodle.endDate ? doodle.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ doodle.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ doodle.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('doodle_index') }}">back to list</a>

