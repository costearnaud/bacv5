{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Description</th>
                <th>Price</th>
                <th>Valid</th>
                <th>BeginDate</th>
                <th>EndDate</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.label }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.valid ? 'Yes' : 'No' }}</td>
                <td>{{ produit.beginDate ? produit.beginDate|date('Y-m-d') : '' }}</td>
                <td>{{ produit.endDate ? produit.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
