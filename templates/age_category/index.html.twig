    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for age_category in age_categories %}
            <tr>
                <td>{{ age_category.id }}</td>
                <td>{{ age_category.name }}</td>
                <td>
                    <a href="{{ path('age_category_show', {'id': age_category.id}) }}">show</a>
