{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>FullName</th>
                <th>ResetToken</th>
                <th>Mobile</th>
                <th>BirthDate</th>
                <th>License</th>
                <th>ClassementSimple</th>
                <th>ClassementDouble</th>
                <th>ClassementMixte</th>
                <th>CodePostal</th>
                <th>MobileParent</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Category</th>
                <th>UpdateDate</th>
                <th>CreatedDate</th>
                <th>Gender</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.resetToken }}</td>
                <td>{{ user.mobile }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ user.license }}</td>
                <td>{{ user.classementSimple }}</td>
                <td>{{ user.classementDouble }}</td>
                <td>{{ user.classementMixte }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.mobileParent }}</td>
                <td>{{ user.rue }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.category }}</td>
                <td>{{ user.updateDate ? user.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.createdDate ? user.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
