                <td>{{ tournoi_user.participation ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.resultatSimple }}</td>
                <td>{{ tournoi_user.resultatDouble }}</td>
                <td>{{ tournoi_user.resultatMixte }}</td>
                <td>{{ tournoi_user.nbTableaux }}</td>
                <td>{{ tournoi_user.inscriptionSimple ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.inscriptionDouble ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.inscriptionMixte ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.participationSimple ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.participationDouble ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.participationMixte ? 'Yes' : 'No' }}</td>
                <td>{{ tournoi_user.inscriptionConfirmee ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('tournoi_user_show', {'id': tournoi_user.id}) }}">show</a>
                    <a href="{{ path('tournoi_user_edit', {'id': tournoi_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tournoi_user_new') }}">Create new</a>
{% endblock %}
