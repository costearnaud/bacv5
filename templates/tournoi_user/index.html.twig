{% extends 'base.html.twig' %}

{% block title %}TournoiUser index{% endblock %}

{% block body %}
    <h1>TournoiUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Inscription</th>
                <th>Participation</th>
                <th>ResultatSimple</th>
                <th>ResultatDouble</th>
                <th>ResultatMixte</th>
                <th>NbTableaux</th>
                <th>InscriptionSimple</th>
                <th>InscriptionDouble</th>
